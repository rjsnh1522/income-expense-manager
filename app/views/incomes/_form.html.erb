<%= form_for(income) do |f| %>
 
 
  <div class="form-group">
    <%= f.label :name,class:'sr-only' %>
    <%= f.text_field :name, class:'form-control',placeholder:'Due to' %>
    <p class='error'><%= show_errors(@income, :name) %></p>
  </div>

  <div class="form-group">
    <%= f.label :amount,class:'sr-only' %>
    <%= f.text_field :amount, class:'form-control',placeholder:'Amount' %>
    <p class='error'><%= show_errors(@income, :amount) %></p>
    
  </div>


  <div class="form-group">
    <%= f.label :category,class:'sr-only' %>
     <% #= f.text_field :category, class:'form-control',placeholder:'Category' %>
     <%= f.collection_select( :income_cat_id, IncomeCategory.all, :id,:income_name, {:include_blank=>'Please Select a category'}, {:class=>"form-control"}) %>              
    <p class='error'>
    <%= show_errors(@income, :income_cat_id) %></p>
  </div>

  <div class="form-group">
    <%= f.label :description,class:'sr-only' %>
    <%= f.text_area :description, class:'form-control',placeholder:'Description' %>
    <p class='error'><%= show_errors(@income, :descriptione) %></p>
  </div>

  <div class="actions form-group clearfix">
    <%= f.submit 'Add new Expense',class:'btn btn-success pull-right clearfix'%>
  </div>
<% end %>
