<div id="addNewExpense">
<h1 class="headerTitle">Edit Income</h1>
    <div class="row">
    
    <div class="col-xs-7 col-sm-7 col-md-6 col-lg-6">
<%= render 'form', income: @income %>
 </div>
    
    <div class="col-xs-5 col-sm-5 col-md-6 col-lg-6">
        <% if @income_data.nil? || @income_data.empty? %>
            <p>No Income this month</p>
            <% else %>
                <h5>Your expense list</h5>
                         <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Amount</th>
                                <th>Type</th>
                            </tr>
                            </thead>
                            <tbody>
                    <% @income_data.each do | income | %>
                            <tr>
                                <td><%= income.name %></td>
                                <td><%= income.amount %></td>
                                <td><%= get_income_cat_name(income.income_cat_id).income_name %>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
            <% end %>
            


    </div>
    
    
    
    </div>

</div>
<%= link_to 'Back', incomes_path %>
