<div id="allExpensePage">
<h1 class="headerTitle">All Expense</h1>
<%= link_to 'New Expense', new_expense_path,class:'btn btn-primary btn-xs' %>
<div class="row">
<p id="notice"><%= notice %></p>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Amount</th>
      <th>Tax</th>
      <th>Tip</th>
      <th>Expense Type</th>
      <th>Description</th>
      <th colspan="2"> Action</th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.user_id %></td>
        <td><%= expense.name %></td>
        <td><%= expense.amount %></td>
        <td><%= expense.tax %></td>
        <td><%= expense.tip %></td>
  
       <td> <%  l=ExpenseCategory.where(:id=>expense.expense_cat_id).select("expense_name").first %>
      <%= l.expense_name %></td>
  
        <td><%= expense.description %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>
</div>
